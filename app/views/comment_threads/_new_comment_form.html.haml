= render 'shared/error_messages', object: thread
= render 'shared/error_messages', object: comment
.flex.justify-center
  = form_with model: comment, url: [board, thread, comment], local: true do |f|
    .field
      = f.label :content, 'New Comment'
      %br/
      = f.text_area :content, cols: 60, rows: 5, class: ['form-field']
    .actions
      = f.submit 'Submit'
